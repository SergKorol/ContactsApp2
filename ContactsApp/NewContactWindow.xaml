<Window
    Height="300"
    Title="NewContactWindow"
    Width="300"
    mc:Ignorable="d"
    x:Class="ContactsApp.NewContactWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ContactsApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Name" />
            <TextBox Margin="0,0,0,5" x:Name="nameTextBox" />
            <TextBlock Text="Email" />
            <TextBox Margin="0,0,0,5" x:Name="emailTextBox" />
            <TextBlock Text="Phone" />
            <TextBox Margin="0,0,0,5" x:Name="phoneTextBox" />
            <Button Click="SaveButton_Click" Content="Save" />
            <Button
                Click="SaveButton_Click"
                Content="Update"
                Foreground="Gray" />
            <Button
                Background="Red"
                Click="SaveButton_Click"
                Content="Delete" />
        </StackPanel>
    </Grid>
</Window>
